# Environment variables for Azure production deployment
# Copy this file to .env.azure and fill in your values

# Database Configuration (Azure SQL Database)
DB_SERVER=your-sql-server.database.windows.net
DB_NAME=QuantumCertifyDB
DB_USERNAME=your-admin-username
DB_PASSWORD=your-secure-password

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here

# Application Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://your-app.azurewebsites.net
LOG_LEVEL=INFO

# Azure Container Registry
REGISTRY_NAME=your-registry-name
IMAGE_TAG=latest

# Frontend Configuration
REACT_APP_API_URL=https://your-api-domain.com

# Azure Resource Configuration
AZURE_RESOURCE_GROUP=quantumcertify-rg
AZURE_LOCATION=eastus
AZURE_SUBSCRIPTION_ID=your-subscription-id